<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/circle_background"
        android:padding="10dp"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />


    <TextView
        android:id="@+id/aboutusinfo"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Para poder mantener la aplicacion funcionando, FoodieGuard propone una version Premium con varias ventajas para aquellas personas que que tengan este rango"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito_bold"
        android:textAlignment="center"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:paddingVertical="5dp"
        android:background="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/aboutusinfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <TextView
        android:id="@+id/aboutusintegrantes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/mostaza"
        android:text="Beneficios"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito_bold"
        android:textAlignment="center"
        android:textSize="40dp"
        app:layout_constraintTop_toBottomOf="@+id/aboutusinfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/Beneficio1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Aquellos usuarios con este rango tendrán un 5% de descuento en todas las reservas que se hagan desde nuestra aplicación"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/nunito_bold"
        android:textAlignment="viewStart"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/aboutusintegrantes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



    <TextView
        android:id="@+id/Beneficio2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Aquellos usuarios con este rango tendrán un 5% de descuento en todas las reservas que se hagan desde nuestra aplicación"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/nunito_bold"
        android:textAlignment="viewStart"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/Beneficio1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/Beneficio3"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Aquellos usuarios con este rango tendrán un 5% de descuento en todas las reservas que se hagan desde nuestra aplicación"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/nunito_bold"
        android:textAlignment="viewStart"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/Beneficio2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <Button
        android:id="@+id/button3"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@drawable/custom_button"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/mostaza"
        android:fontFamily="@font/nunito_semibold"
        android:text="Enviar solicitud"
        android:textSize="18sp"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@+id/Beneficio3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
/>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mostaza">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/circle_background"
        android:padding="10dp"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/aboutusheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:fontFamily="@font/jonesy_letters"
        android:text="@string/main_title"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/backButton"
        app:layout_constraintBottom_toBottomOf="@id/backButton" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/aboutusheader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/custom_edittext"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imageViewaboutus"
                android:layout_width="wrap_content"
                android:layout_height="145dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/logo"/>

            <TextView
                android:id="@+id/aboutusinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Este proyecto ha sido creado para ayudar a las personas con alguna alergia alimentaria, además de rebajar el gasto a los restaurantes a la hora de rediseñar sus cartas de alergenos si cuentan con ella"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_bold"
                android:textAlignment="center"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textSize="16dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:paddingVertical="5dp"
                android:background="@android:color/black"/>

            <TextView
                android:id="@+id/aboutusmiguel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Miguel Vázquez"
                android:textColor="@color/black"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_bold"
                android:textAlignment="viewStart"
                android:textSize="26dp"/>

            <TextView
                android:id="@+id/aboutusmiguelinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Programador de apps móviles actualmente con Flutter, además de ser programador tanto de Kotlin como Springboot para este proyecto."
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:fontFamily="@font/nunito_bold"
                android:textAlignment="viewStart"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/aboutussamuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Samuel Robayo"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_bold"
                android:textAlignment="viewStart"
                android:textSize="26dp"/>

            <TextView
                android:id="@+id/aboutussamuelinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Programador FullStack principalmente enfocado al uso de Laravel actualmente, además de ser programador de Kotlin y Springboot para este proyecto."
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_bold"
                android:textAlignment="viewStart"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/aboutushernando"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hernando Flórez"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito_bold"
                android:textAlignment="viewStart"
                android:layout_marginTop="10dp"
                android:textSize="26dp"/>

            <TextView
                android:id="@+id/aboutushernandoinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Además de programador de Kotlin para el proyecto de FoodieGuard, tambien tengo experiencia como programador Front de JavScript."
                android:textColor="@color/black"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="40dp"
                android:fontFamily="@font/nunito_bold"
                android:textAlignment="viewStart"
                android:textSize="16dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

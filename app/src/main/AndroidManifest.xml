<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:requestLegacyExternalStorage="true"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Foodie_guardv0"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <activity
            android:name="com.example.foodie_guardv0.Activity.actions.user.EditUser"
            android:exported="false" />
        <activity
            android:name="com.example.foodie_guardv0.Activity.restaurants_info.menu.MenuRestaurant"
            android:exported="false" />
        <activity
            android:name="com.example.foodie_guardv0.Activity.info.AboutUsActivity"
            android:exported="false" />
        <activity
            android:name="com.example.foodie_guardv0.Activity.info.HistorialActivity"
            android:exported="false" />
        <activity
            android:name="com.example.foodie_guardv0.Activity.actions.PremiumActivity"
            android:exported="false" />
        <activity
            android:name="com.example.foodie_guardv0.Activity.restaurants_info.CalendarActivity"
            android:exported="false"
            android:launchMode="singleTask" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" /> <!-- android:theme="@style/Theme.Foodie_guardv0" -->
        <activity
            android:name="com.example.foodie_guardv0.Activity.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.App.Splashcreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.foodie_guardv0.Activity.auth.LoginActivity"
            android:label="@string/login_activity_label"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name="com.example.foodie_guardv0.Activity.HomeActivity"
            android:label="Home Activity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name="com.example.foodie_guardv0.Activity.auth.RegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            >

            <!-- Puedes tener más configuraciones aquí según tus necesidades -->
        </activity>
        <activity
            android:name="com.example.foodie_guardv0.Activity.restaurants_info.InfoRestaurant"
            android:screenOrientation="portrait">

            <!-- Intent filters or other activity configurations -->
        </activity>
        <activity
            android:name="com.example.foodie_guardv0.Activity.actions.AddRestaurantActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
    </application>

</manifest>